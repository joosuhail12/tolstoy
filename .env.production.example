# Production Environment Configuration
# Copy this file to .env.production and update with your actual values

# Application Configuration
NODE_ENV=production
PORT=3000
APP_NAME=Tolstoy

# AWS Configuration for Secrets Manager
AWS_REGION=us-east-1
AWS_SECRET_NAME=conductor-db-secret
USE_AWS_SECRETS=true

# Note: Database credentials are retrieved from AWS Secrets Manager
# No DATABASE_URL or DIRECT_URL needed in production

# Optional: Override for direct database connection (not recommended for production)
# DATABASE_URL=postgresql://user:password@host/db
# DIRECT_URL=postgresql://user:password@host/db