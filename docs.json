{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Tolstoy Docs",
  "description": "Workflow automation platform documentation - Learn how to create, manage, and execute workflows with Tolstoy",
  "api": {
    "playground": {
      "mode": "show"
    },
    "baseUrl": ["https://api.tolstoy.dev", "http://localhost:3000"],
    "auth": {
      "method": "key",
      "name": "x-org-id"
    }
  },
  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light.svg"
  },
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#2563eb",
    "light": "#3b82f6",
    "dark": "#1d4ed8"
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://app.tolstoy.dev"
    }
  },
  "navigation": {
    "dropdowns": [
      {
        "dropdown": "Documentation",
        "icon": "book",
        "description": "Complete guide to Tolstoy workflow automation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "docs/quickstart/index",
              "docs/onboarding/index"
            ]
          },
          {
            "group": "Core Concepts", 
            "pages": [
              "docs/flow-definition/index",
              "docs/action-reference/index",
              "docs/tools/index"
            ]
          },
          {
            "group": "Advanced Features",
            "pages": [
              "docs/webhooks/index",
              "docs/execution/index"
            ]
          },
          {
            "group": "API Documentation", 
            "pages": [
              "docs/api-reference/index",
              "docs/api/index"
            ]
          },
          {
            "group": "Interactive API Reference",
            "openapi": "docs/openapi.json"
          }
        ]
      }
    ]
  },
  "footer": {
    "socials": {
      "twitter": "https://twitter.com/tolstoy_dev",
      "github": "https://github.com/tolstoy-dev"
    }
  }
}