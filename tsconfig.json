{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    // Balanced TypeScript settings for quality and practicality
    "strict": false, // Temporarily disabled for incremental migration
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": false, // Keep false for NestJS decorators
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": false, // Too strict for process.env access
    "exactOptionalPropertyTypes": false, // Too strict for practical use
    "noPropertyAccessFromIndexSignature": false, // Too strict for process.env
    "noUnusedLocals": false, // Temporarily disabled for migration
    "noUnusedParameters": false, // Temporarily disabled for migration
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    // Additional checks
    "useUnknownInCatchVariables": false,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "coverage", "**/*.spec.ts", "**/*.test.ts", "tests/**/*"]
}